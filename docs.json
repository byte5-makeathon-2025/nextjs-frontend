        "/api/wishes": {
            "post": {
                "tags": [
                    "Wishes"
                ],
                "summary": "Create a new wish",
                "description": "Create a new wish (no authentication required)",
                "operationId": "01b34792ed549f54dfa2f59564de9dc1",
                "requestBody": {
                    "description": "Wish data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "title",
                                    "description"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "Name of person making the wish",
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "title": {
                                        "description": "Wish title",
                                        "type": "string",
                                        "example": "New Bicycle"
                                    },
                                    "description": {
                                        "description": "Detailed wish description",
                                        "type": "string",
                                        "example": "I would love a red bicycle"
                                    },
                                    "priority": {
                                        "description": "Priority level (defaults to medium)",
                                        "type": "string",
                                        "enum": [
                                            "high",
                                            "medium",
                                            "low"
                                        ],
                                        "example": "high"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Wish created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Wish successfully created"
                                        },
                                        "wish": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "John Doe"
                                                },
                                                "title": {
                                                    "type": "string",
                                                    "example": "New Bicycle"
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "example": "I would love a red bicycle"
                                                },
                                                "priority": {
                                                    "type": "string",
                                                    "example": "high"
                                                },
                                                "status": {
                                                    "type": "string",
                                                    "example": "pending"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The name field is required."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
